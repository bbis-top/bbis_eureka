<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <Properties>
        <Property name="logPath">/data/log/bitmove-eureka</Property>
    </Properties>
    <Appenders>
        <File name="FILE_INFO_LOG" fileName="${logPath}/info.log">
            <PatternLayout pattern="%d %-5p [%t] %C (%M:%L) - %m%n"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>
        <File name="FILE_ERROR_LOG" fileName="${logPath}/error.log">
            <PatternLayout pattern="%d %-5p [%t] %C (%M:%L) - %m%n"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>
        <File name="FILE_SQL_LOG" fileName="${logPath}/sql.log">
            <PatternLayout pattern="%d %-5p [%t] %C (%M:%L) - %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="FILE_INFO_LOG"/>
        </Root>
        <Logger name="cn.bitmove" level="DEBUG" additivity="false">
            <AppenderRef ref="FILE_INFO_LOG"/>
            <AppenderRef ref="FILE_ERROR_LOG"/>
        </Logger>
        <Logger name="org.jooq.tools" level="DEBUG" additivity="false">
            <AppenderRef ref="FILE_SQL_LOG"/>
        </Logger>
    </Loggers>
</configuration>